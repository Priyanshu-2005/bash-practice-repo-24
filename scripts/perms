#!/usr/bin/env bash

# TODO: Make it print out permissions of the given files in octal format
#
# E.g.:
# $ perms weather ../README.md
# 775 weather
# 664 ../README.md



if [ $# -eq 0 ]; then
    echo "Kindly add file names in arguments too...."
    exit 1
fi  

list_permissions() {
    for file in "$@"; do
        if [ -e "$file" ]; then
            permissions=$(stat -c "%a" "$file")
            echo "Permissions of '$file' in octal format: $permissions"
        else
            echo "File '$file' does not exist."
        fi
    done
}

list_permissions "$@"